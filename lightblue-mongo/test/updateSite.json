{
  "object_type":"user",
  "version":"2.0",
  "projection": { "field":"_id"},
  "query": { "$and" : [ {"field":"personalInfo.firstName","op":"=","rvalue":"burak"}, 
                        {"field":"personalInfo.lastName","op":"=","rvalue":"serdar"} ] },
